<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/loadingBusiness"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false">

                <ProgressBar
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Loading..." />
        </RelativeLayout>

        <ListView
            android:id="@+id/business_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>

        <TextView
            android:id="@+id/nobusiness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="No business Found" />

        <include
            android:id="@+id/activity_visit"
            layout="@layout/activity_visit"
            android:visibility="gone"

            />

        <include
            android:id="@+id/activity_queue"
            layout="@layout/activity_queue"
            android:visibility="gone" />

</LinearLayout>