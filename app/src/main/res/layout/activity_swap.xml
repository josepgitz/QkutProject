<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/swap"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView

            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:paddingBottom="48dp"
            android:textAlignment="center"
            android:typeface="serif"
            android:maxLines="3"
            android:text="At what time would you like your ticket to be called out?" />
      <LinearLayout
          android:layout_width="wrap_content"
          android:orientation="horizontal"
          android:layout_gravity="center_horizontal"
          android:layout_height="wrap_content">
          <TextView
              android:id="@+id/people"
              android:layout_width="wrap_content"
              android:textColor="@color/colorPrimary"
              android:drawableLeft="@drawable/ic_perm_contact_calendar_black1_24dp"
              android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
              android:paddingBottom="24dp"
              android:layout_margin="5dp"
              android:fallbackLineSpacing="true"
              android:layout_gravity="center_horizontal"
              android:layout_height="wrap_content"
              android:text="Swap By" />
        <TextView
            android:id="@+id/swap_time"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:textColor="@color/colorPrimary"
            android:drawableLeft="@drawable/ic_perm_contact_calendar_black1_24dp"
            android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
            android:paddingBottom="24dp"
            android:fallbackLineSpacing="true"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="swap time" />
      </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:id="@+id/button_swapper"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_confirm_swap"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/activity_vertical_margin_small"
            android:background="@color/colorAccent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="Confirm" />
        <Button
            android:id="@+id/btn_cancel_swap"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:drawableRight="@drawable/ic_arrow_back_white_24dp"
            android:textColor="@color/colorWhite"
            android:text="Back" />
</LinearLayout>
    </LinearLayout>

</LinearLayout>